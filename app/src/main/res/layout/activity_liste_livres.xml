<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listeLivres"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#E4B3822D"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Liste des Livres"
        android:textAlignment="center"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".listeLivres">

        <EditText
            android:id="@+id/editIdLivre"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Id du Livre"
            android:textAlignment="center"
            android:inputType="number"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/editTitreLivre"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Titre"
            android:textAlignment="center"
            android:inputType="text"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        tools:context=".listeLivres">

    <EditText
        android:id="@+id/editAuteursLivre"
        android:textAlignment="center"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:hint="Auteur"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editAnneeLivre"
        android:textAlignment="center"
        android:inputType="number"
        android:gravity="center_horizontal"
        android:hint="Année"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        tools:context=".listeLivres">

    <EditText
        android:id="@+id/editPrixLivre"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:hint="Prix"
        android:layout_height="wrap_content"
        android:layout_width="200dp"/>

    <EditText
        android:id="@+id/editNombreLivre"
        android:inputType="number"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:hint="Nombres"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:id="@+id/editLivreIdCat"
        android:inputType="text"
        android:hint="Id de la catégorie du livre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/ajouterLivre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Ajouter le livre"
        android:layout_gravity="center"
        app:backgroundTint="#AB976410"
        android:onClick="ajouterLivre"
        />

    <Button
        android:id="@+id/supprimerLivre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Supprimer le Livre"
        android:layout_gravity="center"
        app:backgroundTint="#AB976410"
        android:onClick="supprimerunlivre"

        />

    <Button
        android:id="@+id/afficherLivres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:backgroundTint="#AB976410"
        android:text="Afficher tous les livres"
        android:onClick="viewAllLivre"
        />




</LinearLayout>